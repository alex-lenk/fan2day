{% extends "layout/layout.twig" %}
{% set title = "Личный кабинет вендора - Fan2Day" %}
{% block topPanel %}
  {% set online = "true" %}
  {% include 'desktop-table/top-panel.twig' %}
{% endblock %}

{% block content %}
<div class="personal-area container">
  <div class="row">
    <!-- BEGIN personal-area-aside -->
    {% include 'partials/personal-area-aside.twig' %}
    <!-- END personal-area-aside -->

    <div class="col-xl-6 col-md-9">
      <h1 class="personal-area-title">Мои мероприятия</h1>

      <div class="js__tabs">
        <ul class=" nav-tabs js__tabs-list">
          <li class="nav-tabs__item js__tab-nav active">
            <div class="nav-tabs__text">Активные</div>
          </li>
          <li class="nav-tabs__item js__tab-nav">
            <div class="nav-tabs__text">Приостановленные</div>
          </li>
          <li class="nav-tabs__item js__tab-nav">
            <div class="nav-tabs__text">Архив</div>
          </li>
        </ul>

        <div class="tab-panel js__tab-panel active">
          <div class="personal-area-jumbotron">
            <h3>Добавьте мероприятие</h3>

            <div>И заполните всю необходимую информацию, что бы ваши клиенты легко вас находили</div>
          </div>
        </div>

        <div class="tab-panel js__tab-panel">
          2
        </div>

        <div class="tab-panel js__tab-panel">
          3
        </div>


      </div>
    </div>

    <div class="personal-area-right col-xl-4" >
      <div class="text-right">
        <a href="lk-vend-desk-02.html" class="btn-primary btn"><span class="btn-text">Создать мероприятие</span></a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="offset-xl-2 col-xl-6">
      <img src="img/media/question.svg" alt="">
    </div>
    <div class="col-xl-4">
      <div class="personal-area-box">
        {% include 'desktop-table/lk-support.twig' %}
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block footer %}
  {% include 'desktop-table/footer.twig' %}
{% endblock %}

{% block modal %}
  {% include 'desktop-table/modal.twig' %}
{% endblock %}

{% block search %}
  {% include 'desktop-table/search-area.twig' %}
{% endblock %}

{% block entertainment %}
  {% include 'desktop-table/entertainment.twig' %}
{% endblock %}
